using System;
using System.Collections.Generic;

class RevistaCatalogo
{
    // Catálogo de revistas
    static List<string> catalogo = new List<string> 
    { 
        "Revista Ciencia", 
        "Revista Tecnología", 
        "Revista Historia", 
        "Revista Literatura", 
        "Revista Matemáticas", 
        "Revista Física", 
        "Revista Química", 
        "Revista Biología", 
        "Revista Geografía", 
        "Revista Arte"
    };

    static void Main()
    {
        int opcion = 0;

        do
        {
            Console.WriteLine("\nCatálogo de Revistas:");
            Console.WriteLine("1. Buscar título (Búsqueda Iterativa)");
            Console.WriteLine("2. Buscar título (Búsqueda Recursiva)");
            Console.WriteLine("3. Salir");
            Console.Write("Seleccione una opción: ");
            opcion = int.Parse(Console.ReadLine());

            switch (opcion)
            {
                case 1:
                    BuscarTituloIterativo();
                    break;
                case 2:
                    BuscarTituloRecursivo();
                    break;
                case 3:
                    Console.WriteLine("Saliendo...");
                    break;
                default:
                    Console.WriteLine("Opción no válida, por favor intente nuevamente.");
                    break;
            }
        } while (opcion != 3);
    }

    // Búsqueda Iterativa
    static void BuscarTituloIterativo()
    {
        Console.Write("Ingrese el título de la revista: ");
        string titulo = Console.ReadLine();
        
        if (BusquedaIterativa(catalogo, titulo))
            Console.WriteLine("Título encontrado.");
        else
            Console.WriteLine("Título no encontrado.");
    }

    static bool BusquedaIterativa(List<string> catalogo, string titulo)
    {
        foreach (string revista in catalogo)
        {
            if (revista.Equals(titulo, StringComparison.OrdinalIgnoreCase))
                return true;
        }
        return false;
    }

    // Búsqueda Recursiva
    static void BuscarTituloRecursivo()
    {
        Console.Write("Ingrese el título de la revista: ");
        string titulo = Console.ReadLine();
        
        if (BusquedaRecursiva(catalogo, titulo, 0))
            Console.WriteLine("Título encontrado.");
        else
            Console.WriteLine("Título no encontrado.");
    }

    static bool BusquedaRecursiva(List<string> catalogo, string titulo, int index)
    {
        if (index >= catalogo.Count)
            return false;
        if (catalogo[index].Equals(titulo, StringComparison.OrdinalIgnoreCase))
            return true;
        return BusquedaRecursiva(catalogo, titulo, index + 1);
    }
}
